<% end %>
<!--Start top slider area-->
<div id="heroContainer" class="loading">
  <div id="heroSlider">
    <% get_home_page_slides.each do |slide| %>
            <div class="heroSlide" style="background-image: url('<%=  slide.background.url %>');">
              <h2><%= slide.banner_text %></h2>
            </div>
    <% end %>
  </div>
  <div id="heroControls">
    <div class="arrowControl prev">
      <div class="arrow"></div>
    </div>
    <div class="arrowControl next">
      <div class="arrow"></div>
    </div>
  </div>
  <a href="/choose_material" id="createYourSignNow">
    Create your sign now!
  </a>

  <div class="upperShadow"></div>
</div>
<div class="threeSteps">
  <div class="container_12">
    <div class="grid_4 stepOne">
      <div class="radialGradient"></div>
      <div class="icon"></div>
      <% if @page.content_for(:choose_a_material) %>
          <%= raw (@page.content_for(:choose_a_material)) %>
      <% end %>
      <div class="arrow"></div>
    </div>
    <div class="grid_4 stepTwo">
      <div class="radialGradient"></div>
      <div class="icon"></div>
