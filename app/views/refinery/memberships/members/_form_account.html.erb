<div>
  <div></div>
  <h2>Account</h2>
  <ol>
    <li>
      <%= f.required_label :email %>
      <%= f.text_field :email %>&nbsp;
    </li>
    <% if current_refinery_user.provider != "facebook" %>
        <%= "<li><span class='preview'>#{t('members.form.blank_password_keeps_current', :scope => 'refinery.memberships')}</span></li>".html_safe if @member.persisted? %>
        <li>
          <%= f.required_label :password %>
          <%= f.password_field :password, :autocomplete => 'off' %>&nbsp;
        </li>
        <li>
          <%= f.required_label :password_confirmation %>
          <%= f.password_field :password_confirmation, :autocomplete => 'off' %>&nbsp;
        </li>
    <% end %>
  </ol>
</div>
