<html style="width: 100%; margin-top: 0px !important; padding-top: 0px !important;">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <title></title>
  <style type="text/css">
      body {
          width: 100% !important;
          background-color: #FEFEFE !important;
          letter-spacing: normal !important;
          word-spacing: 0px !important;
          margin-top: 0 !important;
          padding-top: 0 !important;
          margin-right: 0 !important;
          padding-right: 0 !important;
          margin-bottom: 0 !important;
          padding-bottom: 0 !important;
          margin-left: 0 !important;
          padding-left: 0 !important;
          text-shadow: none !important;
          color: #ffffff !important;
          font-size: 12px !important;
          line-height: 17px !important;
          font-family: Arial, "Helvetica Neue", Helvetica, sans-serif !important;
      }
      a {
          color: #f5d42d;
      }
      h1 {
          line-height: 30px;
      }
      table {
          border-collapse: collapse;
      }
  </style>
</head>
<body>

<%= Refinery::Memberships::MembershipEmailPart['email_header'].body.html_safe %>

<table width="600" cellspacing="0" cellpadding="0" border="0" style="border-collapse: collapse; border-spacing: 0; margin: 0px 0 0; padding: 0px 0 0; border: 0;">
  <tbody>
  <tr>
    <td width="50" style="background-color: #2F2F2F">&nbsp;</td>
    <td width="500" style="background-color: #2F2F2F; color: #ffffff;">
      Request to reset password received for admin <br><br>

      Visit this URL to choose a new password: <br><br>

      <a style="color:#f5d42d" href="http://0.0.0.0:3000/members/password_reset?token=<%= @token %>">Reset your password here</a>
      <br><br>
      (Your password will remain the same if no action is taken)
      <br><br>
    </td>
    <td width="50" style="background-color: #2F2F2F">&nbsp;</td>
  </tr>
  </tbody>
</table>

<% if Refinery::Memberships::MembershipEmailPart['email_footer'] && Refinery::Memberships::MembershipEmailPart['email_footer'].body %>
    <%= Refinery::Memberships::MembershipEmailPart['email_footer'].body.html_safe %>
<% end %>
</body>
</html>
