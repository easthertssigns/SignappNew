<header>
  <div class="container_12">
    <div class="grid_2">
      <%= link_to image_tag('header-logo.png', :width => 135, :height => 77, :alt => Refinery::Core.site_name), refinery.root_path, :class => "logo" %>
    </div>
    <div class="grid_10">
      <div class="floatRight">
        <ul class="subNav">
          <% if current_refinery_user %>
              <li>
                <%= link_to "Log Out", "/refinery/logout" %>
              </li>
          <% else %>
              <li><a href="/members/login">Log In / Register</a></li>
          <% end %>
        </ul>
        <%= render :partial => 'spree/shared/minicart' %>
      </div>
    </div>
    <div class="grid_10">
      <nav id="menu" class="menu">
        <ul>
          <li><a href="/">Home</a></li>
          <li class="topLevel"><a href="#">Shop for Ideas</a>

            <div class="megaMenu">
              <% get_taxonomies.each do |taxonomy| %>
                  <ul>
                    <li>
                      <h4 class='taxonomy-root'><%= link_to taxonomy.name, seo_url(taxonomy.root) %></h4>
                    </li>
                    <%= taxons_tree(taxonomy.root, @taxon, Spree::Config[:max_level_in_taxons_menu] || 1) %>
                  </ul>
              <% end %>
              <div class="blueColumn">
                <h4>What's Hot</h4>
                <img src="http://placehold.it/234x130" width="234" height="130">
                <h5>UK Olympics 2012 Bus Scroll</h5>

                <p>In aenean vut phasellus enim lundium sed augue nisi amet elit sagittis!</p>

                <p class="price">From <span>Â£49.99</span></p>
                <a href="#" class="button red">Buy</a><a href="#" class="button">Customise</a>
                <a href="/how-does-customisation-works" class="customisation">How does customisation work?</a>

                <div class="clearfix"></div>
              </div>
            </div>
          </li>
          <li class="topLevel"><a href="/t/business-signs">Business Signs</a>

            <div class="megaMenu">
              <ul>
                <% get_taxonomies.where(:name => 'Business Signs').each do |taxonomy| %>
                    <% taxonomy.root.children.each do |taxon| %>
                        <li>  <%= link_to taxon.name, seo_url(taxon) %></li>
                    <% end %>
                <% end %>
              </ul>
            </div>
          </li>
          <li><a href="#" class="button createASign">Create a Sign</a></li>
        </ul>
      </nav>
      <div class="search">
        <%= render :partial => 'spree/shared/search' %>
      </div>
    </div>
  </div>
</header>