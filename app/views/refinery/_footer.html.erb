<footer>
  <div class="container_12">
    <div class="grid_4">
      <% customer_service = Refinery::Page.find_by_path('footer-customer-service') %>
      <% unless customer_service.nil? %>
          <%= raw customer_service.content_for(:body) %>
      <% end %>
    </div>
    <div class="grid_4">
      <h3>We accept:</h3>
      <div class="card visa"></div>
      <div class="card mastercard"></div>
      <div class="card maestro"></div>
      <div class="card paypal"></div>
      <div class="clearfix"></div>
      <h3 class="newsletter">Newsletter:</h3>

      <p>Full of offers, news and more!</p>
      <%= form_tag('http://signdesigner.us2.list-manage.com/subscribe/post?u=fefafa4336a2266c082d2b265&amp;id=b9f040898c', :id => 'mc-embedded-subscribe-form', :name => 'mc-embedded-subscribe-form', :class => 'validate', :target => '_blank', :novalidate => true) do %>
          <%= email_field_tag('EMAIL', '', :class => 'email', :id => 'mce-EMAIL', :placeholder => 'Enter your email address here...', :required => true) %>
          <%= submit_tag('Submit', :name => 'subscribe', :id => 'mc-embedded-subscribe') %>
      <% end %>
    </div>

    <div class="grid_4">
      <p class="sellingPoint delivery">Delivery to the UK in 4 working days</p>

      <p class="sellingPoint exchange">30 day exchange policy</p>

      <p class="sellingPoint international">International delivery available</p>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="container_12">
    <div class="grid_4">
      <ul class="links">
        <% footerlinks = Refinery::Page.live.sort_by { |page| page.lft }
           for page in footerlinks %>
            <% unless page.parent || page.title === 'Home' || page.show_in_menu == false %>
                <li><%= link_to(page.custom_slug_or_title, refinery.url_for(page.url)) %></li>
            <% end %>
        <% end %>
      </ul>
    </div>
    <div class="grid_4">
      &nbsp;
      <!--Facebook & Twitter-->
    </div>
    <div class="grid_4">
      <a href="http://www.wearealight.com" title="Alight Digital Design Agency" class="alight">Alight Digital Design
        Agency</a>
    </div>
    <div class="clearfix"></div>
  </div>
</footer>

