<h1>Edit Sign Category</h1>

<%= form_for @category, :url => "/admin/sign_category", :html => { :multipart => true } do |form| %>
    <div>
      <%= form.label "Category Name" %>
      <%= form.text_field :category_name %>
    </div>
    <div>
      <%= form.label "Category Description" %>
      <%= form.text_area :category_description %>
    </div>
    <div>
      <%= form.submit "Save" %>
    </div>
<% end %>
