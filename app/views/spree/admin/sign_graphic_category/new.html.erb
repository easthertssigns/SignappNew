<%= render :partial => 'spree/admin/shared/sign_graphics_sub_menu' %>

<h1>Add New Sign Graphic Category</h1>

<%= form_for @category, :url => "/admin/sign_graphic_category", :html => { :multipart => true } do |form| %>
    <div>
      <%= form.label "Category Name" %><br/>
      <%= form.text_field :category_name %>
    </div>
    <div>
      <%= form.label "Category Description" %><br/>
      <%= form.text_area :category_description %>
    </div>
    <div>
      <%= form.submit "Save" %>
    </div>
<% end %>

