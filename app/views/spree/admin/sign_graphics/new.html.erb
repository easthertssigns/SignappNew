<h1>Add New Sign Graphic</h1>

<%= form_for @graphic, :url => "/admin/sign_graphics", :html => { :multipart => true } do |form| %>
    <div>
      <%= form.label "Graphic Title" %>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.label "Graphic Description" %>
      <%= form.text_area :description %>
    </div>
    <div>
      <%= form.file_field :svg_file %>
    </div>
    <div>
      <%= form.submit "Save" %>
    </div>
<% end %>