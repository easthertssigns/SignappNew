<%= render :partial => 'spree/admin/shared/sign_graphics_sub_menu' %>

<h1>Edit Graphic</h1>

<%= form_for @graphic, :url => "/admin/sign_graphics/" + @graphic.id.to_s, :html => { :multipart => true }, :method => :put do |form| %>
    <div>
      <%= form.label "Graphic Title" %><br/>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.label "Graphic Description" %><br/>
      <%= form.text_area :description %>
    </div>
    <div>
      <%= form.label "Price" %><br/>
      <%= form.text_field :price %>
    </div>
    <br/>
    <div>
      <%= form.file_field :svg_file %>
    </div>
    <br/>
    <div><%= render :partial => "categories" %></div>
    <div>
      <%= form.submit "Save" %>
    </div>
    <br/>
<% end %>
