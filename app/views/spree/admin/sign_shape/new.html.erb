<h1>Add New Sign Shape</h1>

<%= form_for @sign_base_shape, :url => "/admin/sign_shape", :html => { :multipart => true } do |form| %>
    <div>
      <%= form.label "Shape Name" %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label "Shape Description" %>
      <%= form.text_area :description %>
    </div>
    <div>
      <%= form.file_field :svg_file %>
    </div>
    <div>
      <%= form.submit "Save" %>
    </div>
<% end %>