<div class="labelsRow">
  <div class="step one">
    <label for="shapeSelect">options</label>
  </div>
</div>

<div class="inputsRow bottom">

  <%= @product.uniq_sign_shapes %>

  <select id="childSelectShape" name="childSelectShape" style="position: absolute; left: 10px; top: 5px; width: 200px;">
    <option></option>
    <% @product.child_products.each do |child| %>
        <option value="<%= child.sign_data.id %>|<%= Spree::Money.new child.get_price_for_type %>">
          Shape : <%= child.sign_data.get_base_shape.name %>, Size : <%= child.sign_data.width %>mm X <%= child.sign_data.height %>mm
        </option>
    <% end %>
  </select>

  <div class="step four rightFloat" id="add_to_basket">
    <input type="submit" value="Ready? Customise your sign!" onclick="customise_selected_product();">
  </div>

  <div class="step basePrice rightFloat">
    <div class="priceWrapper">
      <div id="base_price_bottom">
        <% unless @product.price.nil? %>
            <span class="price" id="displayPrice"><%= Spree::Money.new @product.get_price_for_type %></span><span class="inclVAT"> Incl. VAT</span>
        <% end %>
      </div>
    </div>
    <div id="basket_arrow" class="arrow"></div>
  </div>
</div>
<script>
    $('#base_price').hide();
    $('#base_price_bottom').hide();
    $('#add_to_basket').hide();
    $('#basket_arrow').hide();
    $('#shape_size').hide();
    $('#sign_note').hide();
</script>