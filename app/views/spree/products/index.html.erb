<% if params[:keywords] %>
    <div class="taxonHeading">
      <h1>Search Results</h1>

      <h2>You searched for: <span><%= params[:keywords] %></span></h2>
    </div>
    <div class="blueBackground" data-hook="search_results">
      <% if @products.empty? %>
          <h6 class="search-results-title"><%= t(:no_products_found) %></h6>
      <% else %>
          <%= render :partial => 'spree/shared/products', :locals => {:products => @products, :taxon => @taxon} %>
      <% end %>
    </div>
<% else %>
    <div class="materialsHeading">
      <h1>Choose a material</h1>

      <h2>Take a look below and choose a material for your sign.</h2>
    </div>
    <div class="blueBackground" data-hook="homepage_products">
      <%= render :partial => 'spree/shared/products', :locals => {:products => @products, :taxon => @taxon} %>
      <div class="upperShadow"></div>
      <div class="clearfix"></div>
    </div>
<% end %>
