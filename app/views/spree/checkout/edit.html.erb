<% content_for :head do %>
    <%= javascript_include_tag states_url(:format => :js) %>
<% end %>

<div class="genericlayout blueBackground checkout">

  <div class="container_12">
    <div class="container_960">

      <div class="columns thirteen omega" data-hook="checkout_progress"><%= checkout_progress %></div>

      <div id="checkout" data-hook>
        <%= render :partial => 'spree/shared/error_messages', :locals => {:target => @order} %>

        <div class="row" data-hook="checkout_header">
          <h1 class="columns three alpha checkout_title" data-hook="checkout_title">
            Billing & Delivery
          </h1>
        </div>

        <div class="row checkout_content" data-hook="checkout_content">
          <div class="columns" data-hook="checkout_form_wrapper">
            <%= form_for @order, :url => update_checkout_path(@order.state), :html => {:id => "checkout_form_#{@order.state}"} do |form| %>
                <% unless @order.email? %>
                    <p class="field" style='clear: both'>
                      <%= form.label :email %><br/>
                      <%= form.text_field :email %>
                    </p>
                <% end %>
                <%= render @order.state, :form => form %>
            <% end %>
          </div>
          <% if @order.state != 'confirm' %>
              <div id="checkout-summary" data-hook="checkout_summary_box" class="columns omega four">
                <%= render :partial => 'summary', :locals => {:order => @order} %>
              </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
