<select id="sizeSelect" name="sizeSelect">
  <option>Select a Size</option>
  <% @sign_sizes.each do |size| %>
      <option value="<%= size.width %>|<%= size.height %>"><%= size.title %></option>
  <% end %>

  <% if @custom_sign_size %>
      <option value="custom">Custom</option>
  <% end %>
</select>