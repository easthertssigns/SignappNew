<ul>
  <% if ::Refinery::HomePageSliders::Admin::HomePageSlidersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.home_page_sliders_admin_home_page_sliders_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_home_page_sliders_admin_home_page_slider_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::HomePageSliders::Admin::HomePageSlidersController.sortable? && ::Refinery::HomePageSliders::HomePageSlider.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Home Page Sliders"),
                 refinery.home_page_sliders_admin_home_page_sliders_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Home Page Sliders"),
                 refinery.home_page_sliders_admin_home_page_sliders_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
